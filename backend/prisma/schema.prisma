generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Admin {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  resetToken         String?
  resetTokenExpiresAt DateTime?
}



model Jogador {
  id         Int         @id @default(autoincrement())
  nome       String  
  telefone   String
  tipo       TipoJogador
  valorBase  Float?      // valor opcional, pode ser definido depois
  pagamentos Pagamento[]
}

model Pagamento {
  id         Int       @id @default(autoincrement())
  jogadorId  Int
  valor      Float
  mes        Int
  ano        Int
  dia        Int?
  pago       Boolean    @default(false)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt   // <-- ADICIONE ISTO

  jogador    Jogador    @relation(fields: [jogadorId], references: [id], onDelete: Cascade)
}


enum TipoJogador {
  MENSALISTA
  AVULSO
}


model Despesa {
  id        Int      @id @default(autoincrement())
  descricao String
  valor     Float
  mes       Int?      // <-- deixei opcional
  ano       Int?      // <-- deixei opcional
  createdAt DateTime @default(now())
}


