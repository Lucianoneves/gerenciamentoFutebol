# Exemplo de configuração para PostgreSQL

# Conexão com o banco PostgreSQL
# Formato: postgresql://USUARIO:SENHA@HOST:PORTA/NOME_DO_BANCO?schema=public
DATABASE_URL=postgresql://postgres:senha@localhost:5432/futebol?schema=public

# JWT
JWT_SECRET=troque_por_um_segredo_longo_aleatorio

# SMTP (e-mail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu-email@gmail.com
SMTP_PASS=SEU_APP_PASSWORD
MAIL_FROM=seu-email@gmail.com

# URL da página de reset que receberá ?token=
APP_RESET_URL=https://seu-dominio.com/reset

# Validade do token em minutos
RESET_TOKEN_EXP_MINUTES=60

# CORS
CORS_ALLOW_ALL=true

# WhatsApp Cloud API (opcional)
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

