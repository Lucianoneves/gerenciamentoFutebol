# Produção - variáveis de ambiente

# Banco de dados (ajuste conforme seu provedor)
DATABASE_URL=mysql://<USER>:<PASSWORD>@<HOST>:<PORT>/<DBNAME>

# JWT
JWT_SECRET=<GERAR_UM_SEGREDO_LONGO_ALEATORIO>

# SMTP (e-mail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=<SEU_EMAIL_OU_USUARIO_SMTP>
SMTP_PASS=<SENHA_OU_APP_PASSWORD_SMTP>
MAIL_FROM=<REMETENTE_EX: no-reply@seu-dominio.com>

# URL da página de reset que receberá ?token=
APP_RESET_URL=https://seu-dominio.com/reset

# Validade do token em minutos
RESET_TOKEN_EXP_MINUTES=60