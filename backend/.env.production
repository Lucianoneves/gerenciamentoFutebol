# Produção - variáveis de ambiente

# Banco de dados (ajuste conforme seu provedor)
DATABASE_URL=mysql://<USER>:<PASSWORD>@<HOST>:<PORT>/<DBNAME>

# JWT
JWT_SECRET=<GERAR_UM_SEGREDO_LONGO_ALEATORIO>

# SMTP (e-mail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=<SEU_EMAIL_OU_USUARIO_SMTP>
SMTP_PASS=<SENHA_OU_APP_PASSWORD_SMTP>
MAIL_FROM=<REMETENTE_EX: no-reply@seu-dominio.com>

# URL da página de reset que receberá ?token=
APP_RESET_URL=https://seu-dominio.com/reset

# Validade do token em minutos
RESET_TOKEN_EXP_MINUTES=60

# WhatsApp Cloud API (opcional)
WHATSAPP_TOKEN=<TOKEN_DO_APP_META>
WHATSAPP_PHONE_NUMBER_ID=<ID_DO_NUMERO_WHATSAPP>
WHATSAPP_TEMPLATE_NAME=reset_password
WHATSAPP_TEMPLATE_LANGUAGE=pt_BR

# Provedor de WhatsApp: "meta" (padrão) ou "zapi"
WHATSAPP_PROVIDER=meta

# Z-API (opcional)
ZAPI_INSTANCE_ID=<SUA_INSTANCE_ID>
ZAPI_TOKEN=<SEU_TOKEN_DA_INSTANCE>
ZAPI_CLIENT_TOKEN=<SEU_CLIENT_TOKEN_OPCIONAL>

# Twilio (opcional)
TWILIO_ACCOUNT_SID=<SEU_ACCOUNT_SID>
TWILIO_AUTH_TOKEN=<SEU_AUTH_TOKEN>
TWILIO_FROM=<SEU_NUMERO_TWILIO_EM_E164>